generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  kindeId      String  @unique // Store Kinde user ID
  firstName    String
  lastName     String
  email        String  @unique
  profileImage String?

  createdAt DateTime @default(now())
}

model Profile {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  description   String
  currentStatus Status   @default(UNEMPLOYED) // options: "opentowork", "employed", "unemployed"
  skills        String[] // Array of skills
  education     Json? // Use Json type to store array of objects
  experience    Json? // Use Json type to store array of objects

  user   User   @relation(name: "UserProfile", fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  createdAt DateTime @default(now())
}

enum Status {
  UNEMPLOYED
  EMPLOYED
  OPENTOWORK
}
