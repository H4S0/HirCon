// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  kindeId      String  @unique @db.ObjectId // Store Kinde user ID
  firstName    String
  lastName     String
  email        String  @unique
  profileImage String?

  profile Profile? @relation(name: "UserProfile")

  createdAt DateTime @default(now())
}

model Profile {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  skills      String[] // Array of skills
  education   Json? // Use Json type to store array of objects
  experience  Json? // Use Json type to store array of objects

  user   User   @relation(name: "UserProfile", fields: [userId], references: [id])
  userId String @unique

  createdAt DateTime @default(now())
}
